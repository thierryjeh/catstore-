<div class="row align-items-center m-auto">

  <div class="col-lg-6 container text-center align-middle mt-5 py-lg-5">
    <%= image_tag @item.image_url, alt: 'cat picture', class: 'rounded border border-light'%>
  </div>

  <div class="col-lg-3 container mt-5 py-5">
    <div class="special-card">
      <div class="card-body">
        <h3 class="card-title"><%= @item.title %></h3>
                <p class="card-text">
          <%= @item.description %><br/>
        </p>
      </div>
    </div>
    <div class="row mt-3 mx-3 justify-content-between">
      <h4 class ="text-primary">Prix : <%= @item.price %> â‚¬</h4>
      <% if is_item_in_cart?(@item) %>
        <!-- Button Remove item from cart-->
        <a href="<%= shopping_session_path(@item.id) %>" data-method="DELETE" class="btn btn-outline-danger"><i class="fab fa-opencart"></i></a>
      <% else %>
        <!-- Button add item to cart -->
        <a href="<%= new_shopping_session_path(id: @item.id) %>" class="btn btn-info"><i class="fab fa-opencart"></i></a>
      <% end %>
    </div>
  </div>

</div>
